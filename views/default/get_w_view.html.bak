<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <button id="get_current_weather_btn">Get Current Weather</button>
    <p>Current weather: <span id="current_weather">Not set</span></p>
    <p>Current time: <span id="current_time">Not set</span></p>

    <script>
        $(document).ready(function() {
            $("#get_current_weather_btn").click(function() {
                $.ajax({
                    type: "GET",
                    url: "{{=URL('default', 'get_w')}}",
                    success: function(data) {
                        $("#current_weather").text(data.temp);
                        $("#current_time").text(data.dt);
                    }
                });
            });
        });
    </script>
</body>
</html>
